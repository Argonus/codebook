@model GamePlatformUI.Presenters.TicTacToePresenter

@{
    ViewData["Title"] = $"Match ${Model.id}";
}

<div class="container">
    <div class="col-3"></div>
    <div class="col-6">
        <div class="container">
            @for (var i = 0; i < 3; i++)
            {
                <div class="row">
                    @for (var j = 0; j < 3; j++)
                    {
                        <div class="col-4 border border-dark text-center">
                            <div class="tic-tac-toe-cell text-center">
                                @Model.getBoardField(i, j)
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
    <div class="col-3"></div>
</div>

